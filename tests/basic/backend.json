{
    "registries": {
        "local": {
            "local": {
                "directory": "../../modules"
            }
        }
    },
    "modules": {
        "currency": {
            "registry": "local"
        },
        "friends": {
            "registry": "local"
        },
        "rate_limit": {
            "registry": "local"
        },
        "tokens": {
            "registry": "local"
        },
        "users": {
            "registry": "local"
        },
        "uploads": {
            "registry": "local",
            "config": {
                "maxFilesPerUpload": 16,
                "maxUploadSize": "100mib",
                "maxMultipartUploadSize": "10gib"
            }
        },
        "auth": {
            "registry": "local",
            "config": {
                "providers": [
                    { "oauth": { "provider": "google" } }
                ]
            }
        },
        "email": {
            "registry": "local",
            "config": {
                "provider": {
                    "test": {}
                }
            }
        },
        "auth_oauth2": {
            "registry": "local",
            "config": {
                "providers": {
                    "google": "https://accounts.google.com/.well-known/openid-configuration"
                }
            }
        }
    }
}
