datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model ActiveDirectionalInvite {
    fromUserId      String        @db.Uuid
    toUserId        String        @db.Uuid

    for             String

    originModule    String

    createdAt       DateTime      @default(now())

    expiration      DateTime?
    hidePostExpire  Boolean?

    onAccept        String?
    onDecline       String?

    @@id([fromUserId, toUserId, for, originModule])
}

model ActiveNondirectionalInvite {
    userAId         String        @db.Uuid
    userBId         String        @db.Uuid
    senderId        String        @db.Uuid

    for             String

    originModule    String

    createdAt       DateTime      @default(now())

    expiration      DateTime?
    hidePostExpire  Boolean?

    onAccept        String?
    onDecline       String?

    @@id([userAId, userBId, for, originModule])
}

model ExpiredInvite {
    fromUserId      String        @db.Uuid
    toUserId        String        @db.Uuid

    directional     Boolean

    for             String

    originModule    String

    createdAt       DateTime      @default(now())

    expiration      DateTime?
    hidePostExpire  Boolean?

    @@id([fromUserId, toUserId, for, originModule, createdAt])
}
